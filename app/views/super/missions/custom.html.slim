.row.m-t-3
  .btn-group
      = link_to 'Manage ToDos', super_to_dos_path, class: 'btn btn-default'
      = link_to 'Manage To Do Lists', super_to_do_lists_path, class: 'btn btn-default'
      = link_to 'Manage Missions', super_missions_path, class: 'btn btn-default'
      = link_to 'Manage Custom Missions', custom_super_missions_path, class: 'btn btn-default'

.ibox-content.m-t-3
  .table-responsive
    table.table.table-striped.table-bordered.table-hover.datatable
      thead
        th Business
        th Title
        th Benefits
        th Time To Complete
        th List
        th Actions
      tbody
        - @missions.each do |mission|
          tr
            td = link_to mission.business.name, business_dashboard_path(mission.business_id)
            td = mission.title
            td = mission.benefits
            td = mission.time_to_complete
            td = mission.to_do_list&.name
            td
              = link_to edit_super_mission_path(mission), class: 'btn btn-primary btn-circle m-r-1' do
                i.fa.fa-pencil-square-o
              = link_to super_mission_path(mission), class: 'btn btn-danger btn-circle', method: :delete, data: { confirm: 'Are you sure?' } do
                i.fa.fa-trash

  = paginate @missions
