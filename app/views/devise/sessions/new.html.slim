- title "Locable's Marketing Platform"

- cache do
  .intro-header
    .container
      .row
        .col-lg-12
          .intro-message
            h1 For the 5-Minute Local Marketer
            h3 Digital Marketing Essentials Platform for Local Businesses Operators
            hr.intro-divider
      .row
        div.col-sm-8.col-sm-offset-2
          = render 'alerts'
      .row
        .modal-dialog
          .modal-content
            .modal-header
              h4.modal-title Login to your <b>Locable Marketing Platform Account</b>
            .modal-body
              .row
                .col-xs-6
                  .well
                    = form_for resource, as: resource_name, url: session_path(resource_name) do |form|
                      .form-group
                        => form.label :email_address, :class => 'control-label control-label-dark'
                        = form.email_field :email, autofocus: true, class: 'form-control', :placeholder => "Email address"
                        span.help-block
                      .form-group
                        => form.label :password, :class => 'control-label control-label-dark'
                        = form.password_field :password, autocomplete: 'off', class: 'form-control', :placeholder => "Password"
                        span.help-block
                      = render 'alerts'
                      - if devise_mapping.rememberable?
                        = form.label :remember_be, :class => 'control-label control-label-dark' do
                          => form.check_box :remember_me, :class => 'control-label-dark'
                          ' Remember login
                        p.help-block class="small" (if this is a private computer)
                      = form.button 'Login', :class => 'btn btn-success btn-block'
                      .login-links
                        = render 'devise/shared/links'
                .col-xs-6
                  p.lead Get the most out of <i>YOUR</i> marketing
                  ul.list-unstyled style="line-height: 2"
                    li
                      span.fa class="fa-check text-success"
                      |  Manage Your Website
                    li
                      span.fa class="fa-check text-success"
                      |  Create & Distribute Content
                    li
                      span.fa class="fa-check text-success"
                      |  Collect Customer Reviews
                    li
                      span.fa class="fa-check text-success"
                      |  Get Marketing Help
                    li
                      span.fa class="fa-check text-success"
                      i = link_to '#SupportLocal', 'http://locable.pgtb.me/qNcV6Q', target: :_blank
                  hr
                  p You don't use Locable's Marketing Platform yet?!?
                  p = link_to 'Learn More About 5-Minute Marketing', 'http://www.locable.com/', target: :_blank
    footer
      .container
        .row
          .col-lg-12
            ul.list-inline
              li = link_to 'Example Sites', 'http://www.locable.com/portfolio', target: :_blank
              li.footer-menu-divider
              li = link_to 'Customer Support', 'http://help.locable.com/', target: :_blank
          p.copyright class="text-muted small" Copyright Â© Locable 2017. All Rights Reserved
