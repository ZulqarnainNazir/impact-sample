  - if @business.module_active?(1) || @business.module_active?(3)
    .col-md-12
      .fluid-nav
        ul.nav.navbar-top-links
          - if @business.module_active?(1)
            - if @business.content_type_active?("quick_post")

              li = link_to [:new, @business, :content_quick_post] do

                i.fa.fa-bolt>
                span
                  | Quick Post
            - else
              li class="disabled"
                = link_to "#" do
                  i.fa.fa-bolt.disabled-nav-content>
                  span.disabled-nav-content
                    | Quick Post
            - if !@business.is_on_engage_plan? || current_user.super_user?
              -if @business.content_type_active?("before_after")
                li = link_to [:new, @business, :content_before_after] do
                  i.fa.fa-columns>
                  span
                    | Before &amp; After
              - else
                li class='disabled'
                  = link_to "#" do
                    i.fa.fa-columns.disabled-nav-content>
                    span.disabled-nav-content
                      | Before &amp; After
              -if @business.content_type_active?("gallery")
                li = link_to [:new, @business, :content_gallery] do
                  i.fa.fa-photo>
                  span
                    | Gallery
              - else
                li class='disabled'
                  = link_to "#" do
                    i.fa.fa-photo.disabled-nav-content>
                    span.disabled-nav-content
                      | Gallery
            - else
              - if @business.content_type_active?("before_after")
                li = link_to plans_business_subscriptions_path, style: 'opacity: 0.4;' do
                  i.fa.fa-columns>
                  span
                    | Before &amp; After
              - else
                li class='disabled'
                  = link_to "#" do
                    i.fa.fa-columns.disabled-nav-content>
                    span.disabled-nav-content
                      | Before &amp; After
              - if @business.content_type_active?("gallery")
                li = link_to plans_business_subscriptions_path, style: 'opacity: 0.4;' do
                  i.fa.fa-photo>
                  span
                    | Gallery
              - else
                li class='disabled'
                  = link_to "#" do
                    i.fa.fa-photo.disabled-nav-content>
                    span.disabled-nav-content
                      | Gallery

            - if @business.content_type_active?("event")
              li = link_to [:new, @business, :content_event_definition] do
                i.fa.fa-calendar>
                span
                  | Event
            - else
              li class='disabled'
                = link_to "#" do
                  i.fa.fa-calendar.disabled-nav-content>
                  span.disabled-nav-content
                    | Event

            - if @business.content_type_active?("job")
