.row.admin-dash
  nav.navbar.navbar-static-top[role="navigation" style="margin-bottom: 0"]
    .navbar-header[style="width: 100%; text-align: center;"]
      a.navbar-minimalize.minimalize-styl-2.btn.btn-primary[href="#"]
        i.fa.fa-bars
      = link_to image_tag('Locable_Dark_Logo.png', alt: 'Locable Marketing Platform', class: 'img-responsive '), @business ? business_dashboard_path(@business) : root_path, class: 'navbar-brand', style: 'padding: 6px 15px;'
      / = link_to image_tag('impact-dark-s.png', alt: 'IMPACT', class: 'img-responsive'), @business ? business_dashboard_path(@business) : root_path, class: 'navbar-brand hidden-sm hidden-md hidden-lg', style: 'padding: 11px 15px;'
      ul.nav.navbar-top-links.navbar-right
        - if @business.modules_unactivated != 0
          li.hidden-xs.hidden-sm
              = link_to business_account_modules_path
                i.fa.fa-plus-square-o
                span
                  | Activate Features
                /<span class="label label-warning" style="margin-left: 3px;"> #{@business.modules_unactivated} more </span>

        - if @business.website && !@business.is_on_engage_plan? && @business.module_active?(5)
          li.hidden-xs.hidden-sm title=" Preview Website"
            = link_to website_root_url(host: website_host(@business.website), protocol: :http), target: :_blank do
              i.fa.fa-external-link
              span [data-i18n="nav.website"]  
                | Preview Website

        - elsif @business.is_on_engage_plan?
          li.hidden-xs.hidden-sm title=" Preview Listing"
            = link_to listing_path_url(@business), target: :_blank do
              i.fa.fa-external-link
              span [data-i18n="nav.listing"]
                | Preview Listing
        a.btn.btn-primary.invite-btn.hidden-xs href="#{new_business_crm_invite_url}"
          i.fa.fa-user-plus.fa-2 aria-hidden="true"
          |  Invite Friend
        li.dropdown.pull-right
          a.dropdown-toggle.count-info.jump-to[data-toggle="dropdown" href="#"]
            | Jump to 
            i.fa.fa-toggle-down
          ul.dropdown-menu.dropdown-messages
            - unless @business.is_on_engage_plan? || @business.build_plan_no_setup_fee == true
                - if (@business.build_plan_no_setup_fee == false)
                  li
                    = link_to "Manage Web Pages", [@business, :website_webpages]

            - if @business.to_dos_enabled
              li
                = link_to "Website Tasks", [@business, :to_dos]

            li
              = link_to "Manage Images", business_content_images_path

            - if @business.module_active?(1)                  
              li
                = link_to "View Blog Content", [@business, :content_root]

            - if @business.modules_unactivated != 0
              li.hidden-md.hidden-lg 
                = link_to business_account_modules_path
                  i.fa.fa-plus-square-o
                  span
                    |  Activate Features
                  /<span class="label label-warning" style="margin-left: 3px;"> #{@business.modules_unactivated} more </span>

            - if @business.website && !@business.is_on_engage_plan? && @business.module_active?(5)
              li.hidden-md.hidden-lg title="Preview Website"
                = link_to website_root_url(host: website_host(@business.website), protocol: :http), target: :_blank do
                  i.fa.fa-external-link
                  span [data-i18n="nav.website"]  
                    |  Preview Website

            - elsif @business.is_on_engage_plan?
              li.hidden-md.hidden-lg title="Preview Listing"
                = link_to listing_path_url(@business), target: :_blank do
                  i.fa.fa-external-link
                  span [data-i18n="nav.listing"]
                    |  Preview Listing
            hr
            li = link_to 'http://help.locable.com/', target: :_blank do
              i.fa.fa-life-ring>
              | Support
