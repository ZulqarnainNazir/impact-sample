- title 'Feedback'

ol.breadcrumb
  li = link_to icon('home'), :root
  li = link_to @business.name, [@business, :dashboard]
  li = link_to 'CRM', [@business, :crm_root]
  li = link_to 'Feedback', [@business, :crm_feedbacks]
  li.active Feedback ##{@feedback.id}

hr

dl.dl-horizontal
  dt Serviced At
  dd = @feedback.serviced_at.try(:strftime, '%D') || '--'
  dt Feedback Score
  dd = @feedback.score
  dt Contact Name
  dd = link_to @feedback.contact.name, [:edit, @business, :crm, @feedback.contact]
  dt Email
  dd = @feedback.contact.email
  dt Additional Feedback
  dd = @feedback.description
