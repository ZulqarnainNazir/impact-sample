- title 'Edit Mercantile Embed'

= render :partial => 'dashbreadcrumb', :locals => { :fn => 'Website Tools', :fp => :tools_root, :sn => 'Content', :sp => :tools_content_feed_widgets, :an => 'Edit Mercantile Embed'}

wrapper.wrapper-content.edit-menu-embed
