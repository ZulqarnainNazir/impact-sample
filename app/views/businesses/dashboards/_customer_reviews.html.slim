.ibox.float-e-margins
  - if business.reviews.empty?
    .ibox-content
      .p-a-3.text-center
        h2.m-b-xs No Customer Reviews
        - if !@business.module_active?(3)
          = form_tag business_account_modules_path(:kind => 3, :active => true) do
            = button_tag( type: 'submit', :class => "btn btn-link") do
              h4.text-navy.m-t-0.m-b-0 Begin Requesting & Collecting Reviews Now
        - else
          h4
            = link_to "Begin Requesting & Collecting Reviews Now", [:new, @business, :crm_feedback], class: "text-navy"
  - else
    .ibox-title
      h5 Recent Customer Reviews
      = link_to [:new, @business, :crm_feedback], class: 'pull-right btn btn-xs btn-primary btn-outline' do
        i.fa.fa-plus-circle
        |  Collect More
    .ibox-content
      .feed-activity-list
        - business.reviews.order(reviewed_at: :desc).limit(3).each do |review|
          .feed-element
            = link_to [:edit, business, :crm, review.contact], class: "pull-left" do
              / img.img-circle src=""
              i.fa.fa-user-circle-o.fa-3x
            div
              small.pull-right = "#{time_ago_in_words(review.reviewed_at)} ago"
              div.text-left
                strong 
                  = link_to review.customer_name, [:edit, business, :crm, review.contact]
                |  rated 
                span.text-warning style="display: inline-block"
                  span.fa class=(review.overall_rating.to_i >= 1 ? 'fa-star' : 'fa-star-o')
                  span.fa class=(review.overall_rating.to_i >= 2 ? 'fa-star' : 'fa-star-o')
                  span.fa class=(review.overall_rating.to_i >= 3 ? 'fa-star' : 'fa-star-o')
                  span.fa class=(review.overall_rating.to_i >= 4 ? 'fa-star' : 'fa-star-o')
                  span.fa class=(review.overall_rating.to_i >= 5 ? 'fa-star' : 'fa-star-o')
                div = truncate(review.description, length: 90)
              .pull-right
                - if review.published?
                  strong.text-success> Published
                  = link_to 'Hide', [business, :crm, review, :review_publication, dashboard: true], method: :delete, class: 'btn btn-xs btn-default' 
                - else
                  strong.text-muted> Hidden
                  = link_to 'Publish', [business, :crm, review, :review_publication, dashboard: true], method: :post, class: 'btn btn-xs btn-primary' 
          
      = link_to 'View All', [business, :crm_reviews], class: 'btn btn-primary btn-block m-t'
