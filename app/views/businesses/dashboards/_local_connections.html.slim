      .col-xs-4.no-padding
        = link_to [@business, :crm, 'company_lists', 'following'] do
          .widget.bg-info.m-xxs.p-xxs
            h5 Followers
            h1.m-xs
              strong= listings.length
            small
              .fa.fa-plus
              | 4 New
            / - if recent_listings.length > 0
            /   small
            /     = recent_listings.length.to_s + " New"
            / small="Companies & Causes"
          / .text-center
          /   div style="font-size: 1.5em"
          /     | Followed By
          /   div style="font-size: 3em; line-height: 1"
          /     strong
          /       = listings.length
          /     - if recent_listings.length > 0
          /       em
          /         = recent_listings.length.to_s + " New"
          /   div Companies & Causes
      .col-xs-4.no-padding
        = link_to [@business, :crm, 'company_lists', 'following'] do
          .widget.bg-primary.m-xxs.p-xxs
            h5 Reach
            h1.m-xs
              strong= companies.uniq.size
            small
              em Last 30 Days
            / small People
          / .text-center
          /   div style="font-size: 1.5em"
