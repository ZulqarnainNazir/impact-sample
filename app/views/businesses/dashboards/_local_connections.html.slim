- listings = business.listed_by_business

- last_sign_in_at = current_user.last_sign_in_at

- recent_listings = listings.select { |listing| last_sign_in_at - listing.created_at <= 0 }

- companies = []
- @business.company_lists.each {|list| companies = companies.concat(list.companies)}

.ibox
  .ibox-title
    h5
      i.fa.fa-users
      / = image_tag('https://assets.locable.com/r/thumbnail/09856f82-489e-4ef1-97ad-4aed4413e8d5/Connections%20&%20Community.png', style: 'max-height: 35px; height: 35px;', class: 'img-responsive center-block')
      |  Local Connections
      small
        sup TM
    .ibox-tools style="margin-top: -3px;"
      a.user-dropdown-toggle[data-toggle="dropdown"]
        span
           small.text-muted
             |  Manage
             span.caret.pull-right
      ul.dropdown-menu
        li
          = link_to "Add Company or Cause", [:new, business, :crm_contact]
        li
          = link_to "Manage Local Networks", [:new, business, :crm_contact]
        li
          = link_to "Import Companies", [business, :crm_imports, import_type: :companies]
        li
          = link_to "View Followers", [business, :crm_imports, import_type: :companies]

  .ibox-content
    .row
      .col-xs-4.no-padding
        = link_to [@business, :crm, 'company_lists', 'following'] do

          .widget.bg-success.m-xxs.p-xxs
            h5 Following
            h1.m-xs
              strong= companies.uniq.size
            small
              .fa.fa-plus
              | 2 New
            / small="Companies & Causes in #{@business.company_lists.size} Networks."

          / .text-center
          /   div style="font-size: 1.5em"
          /     | Following
