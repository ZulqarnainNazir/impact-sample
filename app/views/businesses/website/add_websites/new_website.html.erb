                        </div>

                      </div>

                    </div>  
                </div>
            </div>
            <div class="tabs-container">
                <div class="tab-content">
                  <div id="tab-1" class="tab-pane">
                    <%= render 'setup_monthly' %>
                  </div>
                  <div id="tab-2" class="tab-pane active">
                    <%= render 'setup_annually' %>
                  </div>
                </div>
            </div>
        </div>

    </section>

    <section id="contact" class="gray-section contact">
        <div class="container">
            <div class="row m-b-lg">
                <div class="col-lg-12 text-center">
                    <div class="navy-line"></div>
                    <h1>Contact Us</h1>
                    <p>Have questions? Contact Us</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a href="mailto:help@locable.com" class="btn btn-primary">Email to Get Help</a>
                
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center m-t-lg m-b-lg">
                    <p><strong>&copy; 2017 Locable</strong><br/> Main Street for the 21st Century</p>
                </div>
            </div>
        </div>
    </section>


    <script>


        $(document).ready(function () {

            $( "#monthly-check" ).hide();
            $('#btn-monthly').click(function() {
                  $("#btn-monthly").removeClass("btn-outline");
                  $("#btn-annually").addClass("btn-outline");
                  $( "#monthly-check" ).show();
                  $( "#annual-check" ).hide();
            });

            $('#btn-annually').click(function() {
                  $("#btn-annually").removeClass("btn-outline");
                  $("#btn-monthly").addClass("btn-outline");
                  $( "#monthly-check" ).hide();
                  $( "#annual-check" ).show();
            });

            $('body').scrollspy({
                target: '.navbar-fixed-top',
                offset: 80
            });

            // Page scrolling feature
            $('a.page-scroll').bind('click', function(event) {
                var link = $(this);
                $('html, body').stop().animate({
                    scrollTop: $(link.attr('href')).offset().top - 50
                }, 500);
                event.preventDefault();
                $("#navbar").collapse('hide');
            });
        });

        var cbpAnimatedHeader = (function() {
            var docElem = document.documentElement,
                    header = document.querySelector( '.navbar-default' ),
                    didScroll = false,
                    changeHeaderOn = 200;
            function init() {
                window.addEventListener( 'scroll', function( event ) {
                    if( !didScroll ) {
                        didScroll = true;
                        setTimeout( scrollPage, 250 );
                    }
                }, false );
            }
            function scrollPage() {
                var sy = scrollY();
                if ( sy >= changeHeaderOn ) {
                    $(header).addClass('navbar-scroll')
                }
                else {
                    $(header).removeClass('navbar-scroll')
                }
                didScroll = false;
            }
            function scrollY() {
                return window.pageYOffset || docElem.scrollTop;
            }
            init();

        })();

        // Activate WOW.js plugin for animation on scrol
        // new WOW().init();

    </script>
</div>