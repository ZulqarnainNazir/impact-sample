.col-sm-4.col-md-3.col-lg-2
  = link_to [business, :dashboard], class: 'thumbnail' do
    .thumbnail
      - if (business.website.logo.attachment_url? rescue nil)
        = image_tag business.website.logo.attachment_url(:large), alt: business.website.logo.alt, title: business.website.logo.title
      - else
        i.fa.fa-photo
    h2 = business.name
