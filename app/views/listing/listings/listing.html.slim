    .vcard
        - if @business.location.phone_number? && !@business.location.hide_phone?
          p.tel = link_to number_to_phone(@business.location.phone_number), "tel:#{@business.location.phone_number.gsub(/[^0-9]/, '')}", itemprop: 'telephone'
        - if !@business.location.hide_address?
          - if !@business.location.latitude.nil? && !@business.location.longitude.nil?
            p.adr = link_to "http://maps.google.com/maps?ll=#{@business.location.latitude}, #{@business.location.longitude}", itemprop: 'address', target: :_blank do
              span
                => @business.location.address_line_one
                br>
                = @business.location.address_line_two
          - else
            p.adr itemprop="address"
              => @business.location.address_line_one
              br>
              = @business.location.address_line_two
        - if @business.location.email? && !@business.location.hide_email?
          p = link_to @business.location.email, "mailto:#{@business.location.email}", class: 'email', itemprop: 'email'
        = render partial: 'website/contact_pages/opening', collection: @business.location.openings
  .col-sm-8
    - if !@business.location.hide_address?
      - if @business.location && !@business.location.latitude.nil? && !@business.location.longitude.nil?
        - map_params = { center: [@business.location.latitude, @business.location.longitude].reject(&:blank?).join(','), key: 'AIzaSyCA09Ziec6NhT3FboPtVnHEfCaLBzqk298',
          q: [@business.location.address_line_one, @business.location.address_line_two].reject(&:blank?).join(' '), zoom: 18 }.to_param
        iframe width="100%" height="250" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?#{map_params}"
hr
.row
    .col-sm-9

    - request_url = url_for({ controller: params[:controller], action: params[:action] })

      div
        - if params[:blog_search].present? && !params[:blog_search].empty?
          - posts = blog_search_base(nil, @business, params[:blog_search], content_types: params[:content_types], content_category_ids: [], content_tag_ids: [], page: params[:page], limit: 12)
        - elsif params[:content_types].present? && params[:content_types].count == 1 && params[:content_types].first == "Event"
          - posts = events_organized_desc_listings(@business, page: params[:page], limit: 12)
        - else
          - posts = posts(nil, @business, content_types: params[:content_types], content_category_ids: [], content_tag_ids: [], page: params[:page], limit: 12)


        div style="padding-top:30px;"
        - request_url = url_for({ controller: params[:controller], action: params[:action] })
        = render partial: 'website/blog_pages/search_full', locals: {request_url: request_url}
          = render partial: 'website/blog_pages/search_collapsed', locals: {request_url: request_url}
        .m-t-lg
        .grid
          - if posts.present? && !posts.empty?
            / h1 =blog_feed_block.content_types.to_s.split(' ')
            - order_the_events(posts.to_a).each do |posts|
                - if !@business.webhost_primary? && @business.has_plan?
                  = render_content_type_partial(posts, true)
                - elsif @business.webhost_primary?
                  = render_content_type_partial(posts, false)
          - elsif !posts.present? || posts.empty?
            div.col-xs-9
            h2 Nothing matched your search or there is no content here yet...
          .text-center.clear-container
            = paginate posts


    .col-sm-3
    h3 Browse Customer Reviews
    hr

    - business = @business
    - reviews = @business.reviews.published.order(reviewed_at: :desc).limit(6)
    - if reviews.count == 0
      p This business has no reviews at this time.
    - elsif reviews.count > 0
      - reviews.each do |review|
        blockquote.review itemprop="review" itemscope="true" itemtype="http://schema.org/Review"
          h2.h4 itemprop="name"
            = link_to review.title, website_review_url(review, host: website_host(@business.website), protocol: :http), target: :_blank
            meta itemprop="worstRating=" content="1"
            meta itemprop="bestRating=" content="5"
            meta itemprop="ratingValue=" content=review.overall_rating
            p
              span.review-rating
                - if review.overall_rating >= 1.0
                  span.fa.fa-star
                - else
                  span.fa.fa-star-o
                - if review.overall_rating >= 2.0
                  span.fa.fa-star
                - else
                  span.fa.fa-star-o
                - if review.overall_rating >= 3.0
                  span.fa.fa-star
                - else
                  span.fa.fa-star-o
                - if review.overall_rating >= 4.0
                  span.fa.fa-star
                - else
                  span.fa.fa-star-o
                - if review.overall_rating == 5.0
                  span.fa.fa-star
                - else
                  span.fa.fa-star-o
          p.review-text.review-quote itemprop="description" = review.description
          p.reviewer
            span.reviewer-name itemprop="author" => review.contact.name
            - if review.company
              span> from
              - if review.company.business.name? && review.company.business.website_url?
                = link_to review.company.business.name, review.company.business.website_url, target: :_blank
              - elsif review.company.business.website_url?
                = link_to review.company.business.website_url, review.company.business.website_url, target: :_blank
              - elsif review.company.business.name?
                = review.company.business.name
            - if review.external_type == 'locable'
              span.text-muted> â€“ via
              => link_to review.external_url, target: :_blank do
                => review.external_name
                = image_tag 'locable.png', alt: ''
              meta itemprop="datePublished" content=review.reviewed_at.strftime('%F')
              span.text-muted #{time_ago_in_words review.reviewed_at} ago
        hr